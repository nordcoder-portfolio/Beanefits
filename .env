# App
HTTP_ADDR=:8080
HTTP_BASE_URL=
SHUTDOWN_TIMEOUT=10s

JWT_SECRET=dev-secret-change-me
JWT_ISSUER=beanefits
JWT_TTL=24h

# Postgres (container)
POSTGRES_DB=beanefits
POSTGRES_USER=beanefits
POSTGRES_PASSWORD=beanefits

# IMPORTANT: host = service name "postgres"
POSTGRES_URL=postgres://beanefits:beanefits@postgres:5432/beanefits?sslmode=disable

# migrations path inside container (если ты сделал /app/db/migrations как я советовал)
MIGRATIONS_DIR=app/migrations

# Kafka / Redpanda (container)
KAFKA_BROKERS=redpanda:9092
KAFKA_TOPIC=ints

# Producer tuning (минимально и безопасно)
KAFKA_WRITE_TIMEOUT=3s
KAFKA_BATCH_SIZE=1
KAFKA_BATCH_TIMEOUT=0s
# Demo autopublish
KAFKA_AUTOPUBLISH=true
KAFKA_PUBLISH_INTERVAL=2s
